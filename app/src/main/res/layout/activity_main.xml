<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstName"
        android:labelFor="@+id/firstNameEditText"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/firstNameLabel"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastName"
        android:labelFor="@+id/lastNameEditText"
        android:layout_below="@+id/firstNameLabel"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/lastNameLabel"
        android:layout_margin="16dp"
        android:layout_below="@id/firstNameLabel"
        />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:labelFor="@+id/emailEditText"
        android:layout_below="@+id/lastNameLabel"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_toEndOf="@+id/emailLabel"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/lastNameEditText"
        android:layout_below="@id/lastNameLabel"
        />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/emailEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
